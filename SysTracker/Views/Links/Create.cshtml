@model SysTracker.Models.Link

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Link</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Server, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.ServerID, new SelectList(ViewBag.Servers, "ServerID", "Name"), "Select Server")
                <div class="text-danger">
                    @Html.ValidationMessageFor(m => m.ServerID)
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.System, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.SystemsID, new SelectList(ViewBag.Systems, "SystemsID", "Name"), "Select System")
                <div class="text-danger">
                    @Html.ValidationMessageFor(m => m.SystemsID)
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ServerType, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.ServerTypeID, new SelectList(ViewBag.ServerTypes, "ServerTypeID", "Name"), "Select System Type")
                <div class="text-danger">
                    @Html.ValidationMessageFor(m => m.ServerTypeID)
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

