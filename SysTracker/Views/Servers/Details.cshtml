@model SysTracker.Models.Server

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details for Server @Html.DisplayTextFor(m => m.Name)</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(m => m.Name)
        </dt>

        <dd>
            @Html.DisplayFor(m => m.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(m => m.Description)
        </dt>

        <dd>
            @Html.DisplayFor(m => m.Description)
        </dd>
    </dl>
    <h3>Related Links</h3>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.Links.FirstOrDefault().System)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Links.FirstOrDefault().ServerType)
            </th>
        </tr>
        @foreach (var item in Model.Links)
        {
            <tr>
                <td>@Html.ActionLink(item.System.Name, "Details", "Systems", new { id = item.SystemsID }, null)</td>
                <td>@Html.ActionLink(item.ServerType.Name, "Details", "ServerTypes", new { id = item.ServerTypeID }, null)</td>
            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ServerID }) |
    @Html.ActionLink("Delete", "Delete", new { id = Model.ServerID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
