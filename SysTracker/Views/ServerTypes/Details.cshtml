@model SysTracker.Models.ServerType

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>ServerType</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(m => m.Name)
        </dt>

        <dd>
            @Html.DisplayFor(m => m.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(m => m.Description)
        </dt>

        <dd>
            @Html.DisplayFor(m => m.Description)
        </dd>
    </dl>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.Links.FirstOrDefault().System)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Links.FirstOrDefault().Server)
            </th>
        </tr>
        @foreach (var item in Model.Links)
        {
            <tr>
                <td>@Html.ActionLink(item.System.Name, "Details", "Systems", new { id = item.SystemsID }, null)</td>
                <td>@Html.ActionLink(item.Server.Name, "Details", "Servers", new { id = item.ServerID }, null)</td>
            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ServerTypeID }) |
    @Html.ActionLink("Delete", "Delete", new { id = Model.ServerTypeID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
